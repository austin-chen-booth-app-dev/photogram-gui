<h1>List of photos</h1>

<form action="/photos">
  <label for="input_photo_url">Image</label>
  <input id="input_photo_url" type="text" name=input_photo_url placeholder="Enter a URL for the image...">
  <label for="input_caption">Caption</label>
  <textarea id="input_caption" name="input_caption" placeholder="Enter a caption for the photo..." ></textarea>
  <label for="input_owner_id">Owner ID</label>
  <input id="input_owner_id" type="text" name=input_owner_id placeholder="Enter an ID of a User">
  <button>Add photo</button>
</form>

<hr>

<table border="1">
  <tbody>
    <tr>
      <th> Image </th> 
      <th> Caption </th>
      <th> Owner </th>
      <th> Posted </th>
      <th> </th>
    </tr> 

    <% @list_of_photos.each do | photo |%>    
      <tr>
        <td> <img src="<%= photo.image %>"> </td>
        <td> <%= photo.caption %> </td>
        <td> <%= photo.poster.username %> </td>
        <td> <%= photo.created_at %> </td>
        <td> <a href="/photos/<%= photo.id %>"> Show details </a> </td>
      </tr>
    <% end %>
  </tbody>
</table>
