<h1> Photo Details </h1>

<dl>
  <dt>Image</dt>
  <dd><img src="<%= @photo.image %>"></dd>
  <dt>Caption</dt>
  <dd><%= @photo.caption %></dd>
  <dt>Owner</dt>
  <dd><%= @photo.poster.username %></dd>
  <dt>Posted</dt>
  <dd><%= @photo.created_at %></dd>
  <dt>Edit Photo</dt>
  <dd>
    <form action="/photos/<%= @photo_id %>">
      <label for="input_image_url">Image</label>
      <input id="input_image_url" name="input_image_url" placeholder="Enter a URL for the image..." value="<%= @photo.image %>">
      <label for="input_image_caption">Caption</label>
      <textarea id="input_image_caption" name="input_image_caption" placeholder="Enter caption for the photo..."><%= @photo.caption %></textarea>
      <button>Update photo</button>
    </form>
  </dd>
  <dt>Delete Photo</dt>
  <dd> <a href="/delete_photo/<%= @photo_id %>">Delete this photo</a> </dd>
</dl>

<h2> Comments </h2>

<table>
  <tbody>
    <tr>
      <th> Commenter </th> 
      <th> Comment </th>
      <th> Posted </th>
    </tr> 

    <% @photo.comments.each do | comment |%>    
      <tr>
        <td> <%= comment.commenter.username %> </td>
        <td> <%= comment.body %> </td>
        <td> <%= comment.created_at %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Add a new comment</h3>
<form action="/insert_comment_record/<%= @photo_id %>">
  <label for="input_photo_id">Photo ID</label>
  <input type="text" id="input_photo_id" name="input_photo_id" value="<%= @photo_id %>"> 

  <label type="text" for="input_author_id">Author ID</label>
  <input id="input_author_id" name="input_author_id"> 

  <label for="input_comment">Comment</label>
  <textarea id="input_comment" name="input_comment" placeholder="Enter a comment..."></textarea>
  <button>Add comment</button>
</form>
