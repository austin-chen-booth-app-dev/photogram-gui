<h1> <%= @username %> </h1>

<dl>
  <dt>ID</dt>
  <dd><%= @user.id %></dd>
  <dt>Edit user</dt>

  <dd>
    <form action="/users/<%= @username %>">
      <label for="input_username">Username</label>
      <input id="input_username" name="input_username" placeholder="Enter a username..." value="<%= @username %>">
      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2> Own photos (<%= @user.own_photos.count %>)</h2>

<table border="1">
  <tbody>
    <tr>
      <th> Image </th> 
      <th> Owner </th>
      <th> Caption </th>
      <th> Posted </th>
      <th> </th>
    </tr> 

    <% @user.own_photos.each do | photo |%>    
      <tr>
        <td> <img src="<%= photo.image %>"> </td>
        <td> <%= photo.caption %> </td>
        <td> <%= photo.poster.username %> </td>
        <td> <%= photo.created_at %> </td>
        <td> <a href="/photos/<%= photo.id %>"> Show details </a> </td>
      </tr>
    <% end %>
  </tbody>
</table>
